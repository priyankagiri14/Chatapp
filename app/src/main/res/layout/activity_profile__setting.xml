<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users.Profile.Profile_Setting">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profiletoolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_margin="15dp"
        android:gravity="center"
        android:layout_below="@id/profiletoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_pic"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chngprofile"
            android:background="@drawable/circle_transparent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_account_circle_grey_24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:src="@drawable/ic_account_circle_blue_24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profilename"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Priyanka"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit_grey_24dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/profilestatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilename"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:src="@drawable/ic_info_outline_blue_24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profileabout"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="About"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Hi there, i am using CHATAPP"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit_grey_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profiledetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilestatus"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:src="@drawable/ic_email_blue_24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profileabout"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Email"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="priyankagiri023@gmail.com"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_edit_grey_24dp" />
    </LinearLayout>
</RelativeLayout>