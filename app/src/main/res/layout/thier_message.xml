    <LinearLayout
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/musicrcvlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcvmsglinear"
        android:layout_margin="10dp"
        android:background="@drawable/their_message"
        android:orientation="horizontal"
        android:weightSum="3">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <ImageView
                android:visibility="visible"
                android:layout_gravity="center"
                android:id="@+id/dwnldrcvmusic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@drawable/ic_file_download_white_24dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/musicrcvplay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_play_arrow_black_24dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/musicrcvpause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pause_black_24dp"/>
            <SeekBar
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/musicrcvbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Edittext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/musicrcvname"
                android:layout_width="0dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="sgdgsdgsgdsgdgsgdsdgvsgdvsgvdgsv"
                android:textColor="@color/white" />

            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_gravity="bottom"
                android:id="@+id/musicrcvtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="time" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/orange">
            <info.androidhive.fontawesome.FontTextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_headphones_solid"
                app:solid_icon="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@color/orange"/>
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/musicrcvduration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:10"
                android:textSize="10sp"
                android:textColor="@color/white"
