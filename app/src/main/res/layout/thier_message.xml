<LinearLayout
    android:layout_margin="10dp"
    android:id="@+id/rcvmsglinear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/name"
    android:layout_alignLeft="@+id/name"
    android:background="@drawable/their_message">
    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rcv_message_body"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textSize="18dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        />
    <TextView
        android:id="@+id/rcvmsg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="time"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>

    <!--ImageLayout-->
    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/rcvmsglinear"
        android:id="@+id/linearimgrcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/their_message">

        <ImageView
            android:id="@+id/rcvimg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_camera"/>



        <TextView
            android:id="@+id/rcvimgtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sendimg"
            android:layout_alignParentEnd="true"
            android:text="time"
            android:layout_gravity="left"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
<LinearLayout
    android:id="@+id/dwnldimglinear"
    android:visibility="gone"
    android:layout_marginTop="110dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/rcvmsglinear"
    >
    <ImageView
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dwnldimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_file_download_white_24dp"
        android:background="@drawable/dwnldimage"
        />
</LinearLayout>
<!--FileLayout-->
    <LinearLayout
        android:visibility="gone"
        android:layout_margin="10dp"
        android:id="@+id/rcvfilelinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcvmsglinear"
        android:orientation="vertical"
        android:background="@drawable/their_message"
        android:weightSum="2">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/rcvdwnldlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <info.androidhive.fontawesome.FontTextView
                android:layout_weight="0.5"
                android:id="@+id/filercvicon"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/fa_file"
                android:textAlignment="center"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/filercvname"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text=""
                    android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/filercvdwnld"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/transparent"
                android:src="@drawable/ic_file_download_white_24dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/filercvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="time"
                android:textSize="10sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
